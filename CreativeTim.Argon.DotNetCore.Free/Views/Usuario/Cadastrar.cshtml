@model JuntoSeguros.ViewModel.Usuario_ViewModel

@{
    ViewData["Title"] = "Cadastrar";
}
<br />
<br />

@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="card">
        <div class="card-header card-header-icon card-header-primary" id="">
            <div class="row">
                <div class="card-icon" id="minimizeSidebar">
                    <i class="fa fa-cog" aria-hidden="true"></i>
                    &nbsp
                </div>
                <h4 class="card-title">
                   CADASTRAR USUÁRIO
                </h4>
            </div>
        </div>
        <div class="card-body card-body-left">
            <div class="form-row">
                <div class="form-group col-md-5">
                    @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label required" })
                    @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                    @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", @type = "nome" } })
                </div>
                <div class="form-group col-md-5">
                    @Html.LabelFor(model => model.CpfCnpj, htmlAttributes: new { @class = "control-label required" })
                    @Html.ValidationMessageFor(model => model.CpfCnpj, "", new { @class = "text-danger" })
                    @Html.EditorFor(model => model.CpfCnpj, new { htmlAttributes = new { @class = "form-control apenasnumeros" , @id = "cpfcnpj" , @maxlength = "11" } })
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-5">
                    @Html.LabelFor(model => model.Login, htmlAttributes: new { @class = "control-label required" })
                    @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
                    @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <div class="form-group col-md-5">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label required" })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @type = "email" } })
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-offset-0 col-md-12">
                    <input type="submit" value="Cadastrar" class="btn btn-primary" />
                    <p><b class="text-danger">@ViewBag.Error</b></p>
                </div>
            </div>
        </div>
    </div>
}
<script asp-append-version="true" src="~/Script/Usuario/index.js"></script>
