@model JuntoSeguros.ViewModel.Senha_ViewModel

@{
    ViewData["Title"] = "Redefinir";
}
<br /><br />

@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="card">
        <div class="card-body card-body-left">
            <div class="form-row">
                <div class="form-group col-md-5">
                    @Html.LabelFor(model => model.SenhaAtual, htmlAttributes: new { @class = "control-label required" })
                    @Html.ValidationMessageFor(model => model.SenhaAtual, "", new { @class = "text-danger" })
                    @Html.EditorFor(model => model.SenhaAtual, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-5">
                    @Html.LabelFor(model => model.NovaSenha, htmlAttributes: new { @class = "control-label required" })
                    @Html.ValidationMessageFor(model => model.NovaSenha, "", new { @class = "text-danger" })
                    @Html.EditorFor(model => model.NovaSenha, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
             <div class="form-row">
                <div class="form-group col-md-5">
                    @Html.LabelFor(model => model.ConfirmarSenha, htmlAttributes: new { @class = "control-label required" })
                    @Html.ValidationMessageFor(model => model.ConfirmarSenha, "", new { @class = "text-danger" })
                    @Html.EditorFor(model => model.ConfirmarSenha, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-offset-0 col-md-12">
                    <input type="submit" value="Redefinir" class="btn btn-primary btn-submit" />
                    <p><b class="text-danger">@ViewBag.Error</b></p>
                </div>
            </div>
        </div>
    </div>
}
<script asp-append-version="true" src="~/Script/Senha/index.js"></script>